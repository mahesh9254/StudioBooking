@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

@section Style{
    <style type="text/css">
        .signin-header {
            padding: 20px 90px;
        }

        .axil-signin-form-wrap {
            height: calc(100vh - 100px);
            margin: 100px -30px -30px;
        }

        .axil-signin-form {
            max-width: 100% !important;
        }
    </style>
}
<div class="axil-signin-area">

    <!-- Start Header -->
    <div class="signin-header">
        <div class="row align-items-center">
            <div class="col-md-6">
                <a href="/" class="site-logo"><img src="~/lib/studiobooking/img/logo/RB-Studios-Logo_edited.png" alt="logo" style="max-width: 45% !important;"></a>
            </div>
        </div>
    </div>
    <!-- End Header -->

    <div class="row">
        <div class="col-xl-4 col-lg-6">
            <div class="axil-signin-banner bg_image bg_image--9">
                <h3 class="title">We Offer the Best Studios</h3>
            </div>
        </div>
        <div class="col-lg-6 offset-xl-1">
            <div class="axil-signin-form-wrap">
                <div class="axil-signin-form row--10">
                    <h3 class="title">Forgot password confirmation!</h3>
                    <p class="b2 mb--55">Please check your email to reset your password.</p>
                </div>
            </div>
        </div>
    </div>
</div>
