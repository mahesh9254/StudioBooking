			if (isNext) {
				$('#nextWizardStep').val(parseInt(nextStep) + 1);
				$('#prevWizardStep').val(parseInt(prevStep) + 1);
			}
			else {
				$('#nextWizardStep').val(parseInt(nextStep) - 1);
				$('#prevWizardStep').val(parseInt(prevStep) - 1);
			}

